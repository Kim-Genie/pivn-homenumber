<!-- 출력내역 아이템 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="adapter"
            type="com.homenumber.print_2.adapter.recyclerview.RecommnedListAdapter" />
    </data>

    <LinearLayout
        android:id="@+id/layout_shopmall"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/drawable_content_box"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:weightSum="5">

        <TextView
            android:id="@+id/txt_ordnm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="16dp"
            android:text="1"
            android:textColor="@color/C_000000"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:gravity="center"
            android:padding="16dp"
            android:text="홍길동"
            android:textColor="@color/C_000000"
            android:textSize="13sp"
             />

        <TextView
            android:id="@+id/txt_division"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:gravity="center"
            android:padding="16dp"
            android:text="구분"
            android:textColor="@color/C_000000"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/txt_phonenm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:padding="16dp"
            android:text="휴대폰번호"
            android:textColor="@color/C_000000"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:padding="16dp"
            android:text="등록일자"
            android:textColor="@color/C_000000"
            android:textSize="13sp"/>

    </LinearLayout>

</layout>